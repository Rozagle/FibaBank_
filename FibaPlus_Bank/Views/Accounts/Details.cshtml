@using System.Globalization

@model FibaPlus_Bank.Models.Account
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";

    bool isVadeli = Model.AccountType == "Vadeli";
    string currencySymbol = Model.CurrencyCode == "USD" ? "$" : (Model.CurrencyCode == "EUR" ? "€" : "₺");

    DateTime maturityDate = ViewBag.MaturityDate != null ? (DateTime)ViewBag.MaturityDate : DateTime.Now;
    decimal grossInterest = ViewBag.GrossInterest != null ? (decimal)ViewBag.GrossInterest : 0;
    decimal tax = ViewBag.WithholdingTax != null ? (decimal)ViewBag.WithholdingTax : 0;
    decimal netInterest = ViewBag.NetInterest != null ? (decimal)ViewBag.NetInterest : 0;
    decimal totalEnd = (Model.Balance ?? 0) + netInterest;
    int daysLeft = ViewBag.DaysRemaining != null ? (int)ViewBag.DaysRemaining : 0;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <a href="/Accounts/Index" class="btn btn-light btn-sm rounded-pill px-3 fw-bold text-muted border">
        <i class="fa-solid fa-arrow-left me-1"></i> Geri
    </a>
    <h5 class="fw-bold m-0 text-dark">Hesap Detayları</h5>
    <div style="width: 80px;"></div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">

        <h6 class="text-muted ms-1 mb-2 small text-uppercase fw-bold">Tutar Bilgileri</h6>
        <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
            <div class="card-body p-0">
                <div class="list-group list-group-flush">

                    <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                        <span class="text-muted fw-bold small">Bakiye</span>
                        <span class="fw-bold text-dark">@Model.Balance?.ToString("N2") @Model.CurrencyCode</span>
                    </div>

                    @if (isVadeli)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                            <span class="text-muted fw-bold small">Brüt Faiz Getirisi</span>
                            <span class="fw-bold text-success">+@grossInterest.ToString("N2") @Model.CurrencyCode</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                            <span class="text-muted fw-bold small">Stopaj Kesintisi</span>
                            <span class="fw-bold text-danger">-@tax.ToString("N2") @Model.CurrencyCode</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                            <span class="text-muted fw-bold small">Net Faiz Getirisi</span>
                            <span class="fw-bold text-primary">+@netInterest.ToString("N2") @Model.CurrencyCode</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3 bg-light">
                            <span class="text-dark fw-bold small">Vade Sonu Net Tutar</span>
                            <span class="fw-bolder text-dark fs-5">@totalEnd.ToString("N2") @Model.CurrencyCode</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (isVadeli)
        {
            <h6 class="text-muted ms-1 mb-2 small text-uppercase fw-bold">Vade ve Faiz Bilgileri</h6>
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                            <span class="text-muted fw-bold small">Faiz Oranı</span>
                            <span class="fw-bold text-dark">%@Model.InterestRate?.ToString("0.##", CultureInfo.InvariantCulture)</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                            <span class="text-muted fw-bold small">Vade Başlangıç / Bitiş</span>
                            <span class="fw-bold text-dark small">@Model.AccountOpenDate?.ToString("dd.MM.yyyy") / @maturityDate.ToString("dd.MM.yyyy")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                            <span class="text-muted fw-bold small">Vade Süresi</span>
                            <span class="fw-bold text-dark">@Model.TermDays Gün</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                            <span class="text-muted fw-bold small">Vade Bitimine Kalan</span>
                            <span class="badge bg-warning text-dark rounded-pill px-3">@daysLeft Gün</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                            <span class="text-muted fw-bold small">Vade Sonu Aksiyonu</span>
                            <span class="fw-bold text-dark small">Faiz Anaparaya Eklensin</span>
                        </div>
                    </div>
                </div>
            </div>
        }

        <h6 class="text-muted ms-1 mb-2 small text-uppercase fw-bold">Hesap Bilgileri</h6>
        <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                        <span class="text-muted fw-bold small">Hesap Türü</span>
                        <span class="fw-bold text-dark">@Model.AccountType Mevduat Hesabı</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                        <span class="text-muted fw-bold small">Hesap Adı</span>
                        <span class="fw-bold text-dark">@Model.AccountName</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center p-3 border-light">
                        <span class="text-muted fw-bold small">IBAN</span>
                        <div class="d-flex align-items-center">
                            <span class="fw-bold text-dark small font-monospace me-2">@Model.Iban</span>
                            <button class="btn btn-link btn-sm p-0 text-muted" onclick="navigator.clipboard.writeText('@Model.Iban')"><i class="fa-regular fa-copy"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-grid gap-2 mb-5">
            <button onclick="downloadPDF()" class="btn btn-dark py-3 rounded-4 fw-bold shadow-sm">
                <i class="fa-solid fa-file-pdf me-2"></i> Resmi Dekont İndir
            </button>
            <a href="/Transactions/Index?accountId=@Model.AccountId" class="btn btn-outline-primary py-3 rounded-4 fw-bold border-2">
                <i class="fa-solid fa-list-ul me-2"></i> Hesap Hareketleri
            </a>
        </div>

    </div>
</div>

<div id="pdf-container" style="position: absolute; left: -9999px;">
    <div id="pdf-template" style="width: 800px; background: #fff; font-family: 'Arial', sans-serif; color: #000; padding: 30px;">
        <div style="display: flex; justify-content: space-between; margin-bottom: 25px;">
            <div style="width: 30%; padding-top: 10px;">
                <h2 style="color: #0d6efd; font-weight: 900; margin: 0; font-size: 26px;">FibraBank</h2>
            </div>
            <div style="width: 65%; background: linear-gradient(90deg, #16a34a 0%, #15803d 100%); border-radius: 0 0 20px 20px; padding: 12px 25px; color: white;">
                <h2 style="margin: 0; font-size: 20px; font-weight: bold; text-align: center;">HESAP CÜZDANI / DEKONT</h2>
                <div style="font-size: 9px; text-align: center; margin-top: 5px;">Genel Müdürlük: İstanbul | www.fibrabank.com.tr</div>
            </div>
        </div>
        <div style="text-align: center; font-weight: bold; font-size: 12px; margin-bottom: 30px;">HESAP ÖZETİ VE BAKİYE BİLDİRİMİ</div>
        <div style="display: flex; gap: 20px; margin-bottom: 20px;">
            <div style="flex: 1; border: 1px solid #333; border-radius: 12px; padding: 15px; font-size: 10px; line-height: 1.8;">
                <div><b>MÜŞTERİ NO:</b> @Model.UserId</div>
                <div><b>HESAP NO:</b> @Model.AccountNumber</div>
                <div><b>TARİH:</b> @DateTime.Now.ToString("dd/MM/yyyy")</div>
                <div><b>REFERANS:</b> @Guid.NewGuid().ToString().Substring(0, 8).ToUpper()</div>
            </div>
            <div style="flex: 1; border: 1px solid #333; border-radius: 12px; padding: 15px; font-size: 10px; line-height: 1.8;">
                <div><b>SAYIN:</b> @Model.User.FullName.ToUpper()</div>
                <div><b>ADRES:</b> DİJİTAL BANKACILIK MÜŞTERİSİ</div>
            </div>
        </div>
        <div style="border: 1px solid #333; border-radius: 12px; padding: 20px; margin-bottom: 30px;">
            <table style="width: 100%; font-size: 11px;">
                <tr style="border-bottom: 1px dashed #ccc;"><td style="padding: 8px 0;"><b>HESAP ADI</b></td><td style="text-align: right;">@Model.AccountName</td></tr>
                <tr style="border-bottom: 1px dashed #ccc;"><td style="padding: 8px 0;"><b>IBAN</b></td><td style="text-align: right; font-family: monospace;">@Model.Iban</td></tr>
                @if (isVadeli)
                {
                    <tr style="border-bottom: 1px dashed #ccc;"><td style="padding: 8px 0;"><b>FAİZ ORANI</b></td><td style="text-align: right;">% @Model.InterestRate?.ToString("0.##", CultureInfo.InvariantCulture)</td></tr>
                    <tr style="border-bottom: 1px dashed #ccc;"><td style="padding: 8px 0;"><b>VADE SONU</b></td><td style="text-align: right;">@maturityDate.ToString("dd.MM.yyyy")</td></tr>
                    <tr style="border-bottom: 1px dashed #ccc;"><td style="padding: 8px 0;"><b>NET KAZANÇ</b></td><td style="text-align: right;">+@netInterest.ToString("N2") @currencySymbol</td></tr>
                }
                <tr><td style="padding: 15px 0 0 0; font-weight: bold; font-size: 12px;">GÜNCEL BAKİYE</td><td style="padding: 15px 0 0 0; text-align: right; font-weight: bold; font-size: 16px;">@Model.Balance?.ToString("N2") @Model.CurrencyCode</td></tr>
            </table>
            <div style="margin-top: 20px; font-size: 10px; font-style: italic;">
                @FibaPlus_Bank.Helpers.NumberToText.Convert(Model.Balance ?? 0, Model.CurrencyCode)
            </div>
        </div>
        <div style="display: flex; gap: 15px;">
            <div style="flex: 2; border: 1px solid #333; border-radius: 20px; padding: 8px 15px; font-size: 10px; font-weight: bold;">SIRA NO : 2026-@Model.AccountId</div>
            <div style="flex: 1; border: 1px solid #333; border-radius: 20px; padding: 8px 15px; font-size: 10px; font-weight: bold; display: flex; justify-content: space-between;"><span>TUTAR :</span><span>@Model.Balance?.ToString("N2")</span></div>
        </div>
        <div style="text-align: right; font-size: 8px; margin-top: 10px; color: #666;">Bu belge 5070 sayılı kanun uyarınca dijital olarak üretilmiştir.</div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script src="~/js/account-details.js" asp-append-version="true"></script>
