@{
    ViewData["Title"] = "Yeni Kart Başvurusu";
    bool isEligible = ViewBag.IsEligible ?? false;
    bool isVip = ViewBag.IsVip ?? false; 
    decimal limit = ViewBag.CreditLimit ?? 0;
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="d-flex align-items-center mb-5">
    <a href="/Cards/Index" class="btn btn-light border rounded-pill px-3 py-2 me-3 fw-bold text-decoration-none text-dark">
        <i class="fa-solid fa-arrow-left"></i> Geri
    </a>
    <div>
        <h3 class="fw-bold m-0 text-dark">Yeni Kart Başvurusu</h3>
        <span class="text-muted small">Size uygun kartı seçin.</span>
    </div>
</div>

<div class="row g-4 justify-content-center">

    <div class="col-md-5">
        <div class="card border-0 shadow-sm rounded-4 h-100 p-4">
            <div class="text-center mb-4">
                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                    <i class="fa-solid fa-wallet fa-2x text-primary"></i>
                </div>
                <h5 class="fw-bold">Banka Kartı</h5>
                <p class="text-muted small">Vadesiz hesabınıza bağlı kart.</p>
            </div>

            <form method="post" action="/Cards/Create">
                <input type="hidden" name="cardType" value="Debit" />

                <div class="mb-3">
                    <label class="form-label small fw-bold text-muted">BAĞLANACAK HESAP</label>
                    <select name="linkedAccountId" class="form-select bg-light border-0 py-3" required>
                        <option value="">Hesap Seçiniz</option>
                        @if (ViewBag.VadesizAccounts != null)
                        {
                            foreach (var acc in ViewBag.VadesizAccounts)
                            {
                                <option value="@acc.AccountId"> @acc.AccountName - @acc.AccountNumber | @acc.Balance @acc.CurrencyCode</option>
                            }
                        }
                    </select>
                </div>

                <button class="btn btn-primary w-100 py-3 rounded-3 fw-bold">Oluştur</button>
            </form>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card border-0 shadow-sm rounded-4 h-100 p-4 position-relative overflow-hidden">

            @if (!isEligible)
            {
                <div class="position-absolute top-0 start-0 w-100 h-100 bg-white bg-opacity-75 d-flex flex-column align-items-center justify-content-center text-center p-4" style="z-index: 10;">
                    <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fa-solid fa-lock fa-2x"></i>
                    </div>
                    <h6 class="fw-bold text-danger">Limit Yetersiz</h6>
                    <p class="small text-muted">Kredi kartı için vadeli hesap bakiyeniz en az 1.000.000 ₺ olmalıdır.</p>
                </div>
            }

            <div class="text-center mb-4">
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow-sm" style="width: 70px; height: 70px;">
                    <i class="fa-solid fa-credit-card fa-2x"></i>
                </div>
                <h5 class="fw-bold">Kredi Kartı</h5>
                <p class="text-muted small">Yüksek limitli prestijli kart.</p>
            </div>

            <form method="post" action="/Cards/Create">
                <input type="hidden" name="cardType" value="Credit" />

                <div class="mb-3">
                    <label class="form-label small fw-bold text-muted">KART MARKASI SEÇİN</label>
                    <div class="d-grid gap-2">
                        <input type="radio" class="btn-check" name="brand" id="visa" value="Visa" checked>
                        <label class="btn btn-outline-primary py-3 fw-bold rounded-3 d-flex align-items-center justify-content-between px-4" for="visa">
                            <span>Visa (Classic)</span>
                            <i class="fa-brands fa-cc-visa fs-4"></i>
                        </label>

                        <input type="radio" class="btn-check" name="brand" id="master" value="Mastercard">
                        <label class="btn btn-outline-warning py-3 fw-bold rounded-3 d-flex align-items-center justify-content-between px-4 text-dark" for="master">
                            <span>Mastercard (Gold)</span>
                            <i class="fa-brands fa-cc-mastercard fs-4"></i>
                        </label>

                        @if (isVip)
                        {
                            <input type="radio" class="btn-check" name="brand" id="troy" value="Troy">
                            <label class="btn btn-outline-dark py-3 fw-bold rounded-3 d-flex align-items-center justify-content-between px-4" for="troy" style="background: linear-gradient(135deg, #000, #333); color: #ffd700; border: 1px solid #ffd700;">
                                <span> Black Card (VIP)</span>
                                <i class="fa-solid fa-crown"></i>
                            </label>
                        }
                    </div>
                </div>

                <div class="bg-light p-3 rounded-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="small fw-bold text-muted">ONAYLANACAK LİMİT</span>
                        <span class="fw-bold text-dark fs-5">@limit.ToString("N0") ₺</span>
                    </div>
                </div>

                <button class="btn btn-primary w-100 py-3 rounded-3 fw-bold" @(!isEligible ? "disabled" : "")>
                    Kartı Talep Et
                </button>
            </form>
        </div>
    </div>

</div>