@using FibaPlus_Bank.Models
@model List<Transaction>
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";

    var activeCards = ViewBag.ActiveCards as List<Card>;
    var userName = ViewBag.UserName as string;

    var chartValues = ViewBag.ChartValues as List<decimal>;
    decimal totalAssets = ViewBag.TotalAssets != null ? (decimal)ViewBag.TotalAssets : 1;

    decimal pctTRY = totalAssets > 0 ? (chartValues[0] / totalAssets) * 100 : 0;
    decimal pctUSD = totalAssets > 0 ? (chartValues[1] / totalAssets) * 100 : 0;
    decimal pctEUR = totalAssets > 0 ? (chartValues[2] / totalAssets) * 100 : 0;
    decimal pctGold = totalAssets > 0 ? (chartValues[3] / totalAssets) * 100 : 0;
}

<link href="~/css/home.css" rel="stylesheet" asp-append-version="true" />

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <div>
        <h2 class="fw-bold text-dark m-0" style="letter-spacing: -0.5px;">Özet</h2>
        <p class="text-muted mb-0 small">Hoşgeldin, @userName 👋</p>
    </div>

    <div class="d-flex align-items-center gap-3 flex-wrap">
        <div class="asset-pill"><i class="fa-solid fa-turkish-lira-sign text-secondary"></i> TR: <span>@(((decimal)ViewBag.TotalTRY).ToString("N0")) ₺</span></div>
        @if ((decimal)ViewBag.TotalUSD > 0)
        {
            <div class="asset-pill"><i class="fa-solid fa-dollar-sign text-success"></i> USD: <span>@(((decimal)ViewBag.TotalUSD).ToString("N0")) $</span></div>
        }
        @if ((decimal)ViewBag.TotalGold > 0)
        {
            <div class="asset-pill"><i class="fa-solid fa-coins text-warning"></i> ALTIN: <span>@(((decimal)ViewBag.TotalGold).ToString("N0")) Gr</span></div>
        }
        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold shadow-sm" style="width: 40px; height: 40px;">
            @userName?.Substring(0, 1)
        </div>
    </div>
</div>

<div class="row g-4">

    <div class="col-lg-4">
        <div id="cardCarousel" class="carousel slide mb-4" data-bs-interval="false">
            <div class="carousel-inner">
                @if (activeCards != null && activeCards.Count > 0)
                {
                    for (int i = 0; i < activeCards.Count; i++)
                    {
                        var card = activeCards[i];
                        string bgClass = "bg-visa";
                        string iconClass = "fa-cc-visa";
                        string chipClass = "chip-silver";

                        if (card.CardType == "Mastercard") { bgClass = "bg-master"; iconClass = "fa-cc-mastercard"; }
                        else if (card.CardType == "Troy") { bgClass = "bg-troy"; iconClass = "fa-credit-card"; chipClass = "chip-gold"; }

                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="credit-card @bgClass">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="chip @chipClass"></div>
                                    <i class="fa-solid fa-wifi contactless" style="@(card.CardType == "Troy" ? "color: #d4af37; opacity:1;" : "")"></i>
                                </div>
                                <div class="card-number">
                                    @(card.CardNumber != null && card.CardNumber.Length == 16 ? System.Text.RegularExpressions.Regex.Replace(card.CardNumber, ".{4}", "$0 ") : card.CardNumber)
                                </div>
                                <div class="d-flex justify-content-between align-items-end">
                                    <div>
                                        <div class="card-holder">@card.HolderName</div>
                                        <small class="opacity-75" style="font-size: 9px;">@card.ExpiryDate</small>
                                    </div>
                                    <div class="card-logo">
                                        @if (card.CardType == "Troy")
                                        {
                                            <span class="troy-text-gold">TROY</span>
                                        }
                                        else
                                        {
                                            <i class="fa-brands @iconClass"></i>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <div class="credit-card bg-secondary d-flex flex-column align-items-center justify-content-center text-center">
                            <i class="fa-solid fa-plus-circle fa-3x mb-3 opacity-50"></i>
                            <h6>Aktif Kartınız Yok</h6>
                            <a href="/Cards/Create" class="btn btn-sm btn-light rounded-pill px-3 mt-2 fw-bold">Başvuru Yap</a>
                        </div>
                    </div>
                }
            </div>

            @if (activeCards != null && activeCards.Count > 1)
            {
                <button class="carousel-control-prev" type="button" data-bs-target="#cardCarousel" data-bs-slide="prev" style="width: 30px; left: -10px;"><span class="carousel-control-prev-icon bg-dark rounded-circle p-2 bg-opacity-25" aria-hidden="true"></span></button>
                <button class="carousel-control-next" type="button" data-bs-target="#cardCarousel" data-bs-slide="next" style="width: 30px; right: -10px;"><span class="carousel-control-next-icon bg-dark rounded-circle p-2 bg-opacity-25" aria-hidden="true"></span></button>
            }
        </div>

        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="fw-bold m-0">Son İşlemler</h6>
                <a href="/Transactions/Index" class="text-primary text-decoration-none small"><i class="fa-solid fa-sliders"></i></a>
            </div>
            <div class="d-flex flex-column gap-3">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        bool isIncome = (item.TransactionStatus == "Refunded" || item.TransactionType == "İade");
                        <div class="d-flex align-items-center">
                            <div class="rounded-3 bg-light p-2 me-3 text-primary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="fa-solid @(isIncome ? "fa-arrow-down" : "fa-paper-plane")"></i>
                            </div>
                            <div class="flex-grow-1 overflow-hidden">
                                <div class="fw-bold text-dark small text-truncate">@item.ReceiverName</div>
                                <div class="text-muted" style="font-size: 10px;">@item.TransactionDate?.ToString("dd MMM HH:mm")</div>
                            </div>
                            <div class="fw-bold small @(isIncome ? "text-success" : "text-danger")">
                                @(isIncome ? "+" : "-")@item.Amount?.ToString("N0")
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center text-muted small my-3">İşlem geçmişi boş.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="bg-white rounded-4 p-4 shadow-sm border border-light mb-4 position-relative overflow-hidden">
            <div class="position-relative z-1">
                <h4 class="fw-bold text-dark mb-1">Cashback Fırsatı! 🎁</h4>
                <p class="text-muted small mb-3">FibraBank kartlarınla yapacağın alışverişlerde %60'a varan iade.</p>
                <button class="btn btn-dark rounded-pill px-4 py-2 btn-sm fw-bold">Detaylar</button>
            </div>
            <div class="position-absolute top-0 end-0 h-100 w-50 d-none d-md-block" style="background: linear-gradient(90deg, transparent, #fff0f5); clip-path: polygon(20% 0%, 100% 0, 100% 100%, 0% 100%);"></div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="dashboard-card h-full-card">
                    <h6 class="fw-bold mb-3"><i class="fa-solid fa-paper-plane text-primary me-2"></i>Hızlı Transfer</h6>
                    <div class="bg-light rounded-3 p-2 d-flex align-items-center mb-3 border">
                        <input id="dashboardCardInput" type="text" class="form-control border-0 bg-transparent shadow-none fw-bold small " maxlength="19" placeholder="0000 0000 0000 0000" style="letter-spacing: 1px;">
                        <i class="fa-brands fa-cc-mastercard text-danger fs-4 opacity-50 pe-2"></i>
                    </div>
                    <button onclick="checkCardAndGo()" class="btn btn-primary w-100 rounded-3 fw-bold py-2">Devam Et <i class="fa-solid fa-arrow-right ms-2"></i></button>
                    <small id="cardError" class="text-danger fw-bold mt-2 d-block text-center" style="display:none; font-size: 11px;"></small>
                    <div class="text-muted mt-2 text-center" style="font-size: 10px;">FibraBank veya diğer banka kartlarına</div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="dashboard-card h-full-card d-flex flex-column justify-content-center">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="fw-bold m-0"><i class="fa-solid fa-right-left text-primary me-2"></i>Çevirici</h6>
                    </div>

                    <div class="d-flex align-items-center bg-light rounded-3 p-2 border mb-1 position-relative">
                        <div class="d-flex align-items-center cursor-pointer p-1" onclick="openCurrencyModal('from')" style="min-width: 100px;">
                            <img src="https://flagcdn.com/48x36/us.png" id="img-from" class="curr-flag rounded-1" width="24" height="18">
                            <span id="text-from" class="fw-bold ms-2 text-dark">USD</span>
                            <i class="fa-solid fa-angle-down ms-2 text-muted small"></i>
                        </div>
                        <input type="number" id="amountInput" class="form-control border-0 bg-transparent text-end fw-bold fs-5 shadow-none p-0" value="1" min="0">
                    </div>

                    <div class="position-relative text-center" style="z-index: 10; margin-top: -12px; margin-bottom: -12px;">
                        <button class="btn btn-primary btn-sm rounded-circle shadow-sm border-2 border-white d-flex align-items-center justify-content-center"
                                style="width: 36px; height: 36px; margin: 0 auto;" onclick="swapCurrencies()">
                            <i class="fa-solid fa-right-left text-white align-item-center"></i>
                        </button>
                    </div>

                    <div class="d-flex align-items-center bg-light rounded-3 p-2 border mt-1">
                        <div class="d-flex align-items-center cursor-pointer p-1" onclick="openCurrencyModal('to')" style="min-width: 100px;">
                            <img src="https://flagcdn.com/48x36/tr.png" id="img-to" class="curr-flag rounded-1" width="24" height="18">
                            <span id="text-to" class="fw-bold ms-2 text-dark">TRY</span>
                            <i class="fa-solid fa-angle-down ms-2 text-muted small"></i>
                        </div>
                        <div class="form-control border-0 bg-transparent text-end fw-bold fs-5 shadow-none text-primary p-0" id="conversionResult">...</div>
                    </div>

                    <div class="text-center mt-3">
                        <span class="badge bg-light text-muted border fw-normal px-3 py-2 rounded-pill">
                            1 <span id="rateSource">USD</span> = <span id="rateValue">...</span> <span id="rateTarget">TRY</span>
                        </span>
                    </div>

                    <input type="hidden" id="currFromValue" value="USD">
                    <input type="hidden" id="currToValue" value="TRY">
                </div>
            </div>
        </div>

        <div class="dashboard-card">
            <h6 class="fw-bold mb-4">Varlık Dağılımı</h6>
            <div class="row align-items-center">
                <div class="col-4">
                    <div class="position-relative" style="height: 250px; width: 250px; margin: 0 auto;">
                        <canvas id="assetsChart"></canvas>
                        <div class="position-absolute top-50 start-50 translate-middle text-center" style="pointer-events: none;">
                            <div class="small text-muted" style="font-size: 11px;">Toplam</div>
                            <div class="fw-bold text-dark fs-6 text-nowrap">@totalAssets.ToString("0.##") ₺</div>
                        </div>
                    </div>
                </div>
                <div class="col-8 ps-4">
                    <div class="mb-2"><div class="d-flex justify-content-between small fw-bold mb-1"><span style="border-left: 3px solid #6366f1; padding-left: 8px;">Türk Lirası</span><span>%@pctTRY.ToString("N0")</span></div><div class="progress" style="height: 6px;"><div class="progress-bar" style="width: @pctTRY%; background-color: #6366f1;"></div></div></div>
                    <div class="mb-2"><div class="d-flex justify-content-between small fw-bold mb-1"><span style="border-left: 3px solid #3b82f6; padding-left: 8px;">ABD Doları</span><span>%@pctUSD.ToString("N0")</span></div><div class="progress" style="height: 6px;"><div class="progress-bar" style="width: @pctUSD%; background-color: #3b82f6;"></div></div></div>
                    <div class="mb-2"><div class="d-flex justify-content-between small fw-bold mb-1"><span style="border-left: 3px solid #10b981; padding-left: 8px;">Euro</span><span>%@pctEUR.ToString("N0")</span></div><div class="progress" style="height: 6px;"><div class="progress-bar" style="width: @pctEUR%; background-color: #10b981;"></div></div></div>
                    <div><div class="d-flex justify-content-between small fw-bold mb-1"><span style="border-left: 3px solid #f59e0b; padding-left: 8px;">Altın</span><span>%@pctGold.ToString("N0")</span></div><div class="progress" style="height: 6px;"><div class="progress-bar" style="width: @pctGold%; background-color: #f59e0b;"></div></div></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="currencyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content rounded-4 border-0 shadow-lg" style="height: 600px;">
            <div class="modal-header border-0 pb-0 pt-4 px-4 align-items-center">
                <h5 class="fw-bold text-dark m-0" style="font-size: 1.1rem;">Para Birimi Seç</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="p-4 pb-2">
                <div class="position-relative">
                    <i class="fa-solid fa-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                    <input type="text" id="currencySearch" class="form-control form-control-lg border-2 shadow-none ps-5"
                           placeholder="Ara (örn: USD, Euro, Türk Lirası)..."
                           style="border-radius: 12px; font-size: 0.95rem; border-color: #e2e8f0;"
                           onkeyup="filterCurrencies()">
                </div>
            </div>
            <div class="modal-body px-2 pt-0">
                <div id="currencyListContainer" class="list-group list-group-flush mt-2">
                    <div class="text-center text-muted small mt-5">
                        <div class="spinner-border text-primary spinner-border-sm mb-2" role="status"></div>
                        <div>Para birimleri yükleniyor...</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    window.chartData = {
        labels: @Html.Raw(Json.Serialize(ViewBag.ChartLabels ?? new List<string>())),
        values: @Html.Raw(Json.Serialize(ViewBag.ChartValues ?? new List<decimal>())),
        colors: @Html.Raw(Json.Serialize(ViewBag.ChartColors ?? new List<string>()))
    };
</script>
<script src="~/js/home.js" asp-append-version="true"></script>