@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Şifremi Unuttum</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: 'Poppins', sans-serif;
        }</style>
</head>
<body>
    <div class="card border-0 shadow-lg p-4" style="width: 400px; border-radius: 20px;">
        <div class="text-center mb-4">
            <h4 class="fw-bold">Şifremi Unuttum 🔒</h4>
            <p class="text-muted small">E-posta adresinizi girin, size bir kod gönderelim.</p>
        </div>
        <form action="/Login/SendVerificationCode" method="post">
            <div class="mb-3">
                <label class="fw-bold small text-muted">E-POSTA</label>
                <input type="email" name="email" class="form-control" required placeholder="Mail Adresinizi Giriniz">
            </div>
            <button class="btn btn-primary w-100 py-2 fw-bold">Kod Gönder</button>
            <a href="/Login/Index" class="btn btn-light w-100 mt-2 text-muted">Vazgeç</a>
        </form>
    </div>
    @if (TempData["Error"] != null)
    {
        <script>Swal.fire('Hata', '@TempData["Error"]', 'error');</script>
    }
</body>
</html>