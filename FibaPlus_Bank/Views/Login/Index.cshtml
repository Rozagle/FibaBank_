@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap | FibraBank</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link href="~/css/login.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-banner">
            <div class="banner-content">
                <h1>Geleceğin Bankacılığı.</h1>
                <p>FibraBank ile finansal özgürlüğün tadını çıkarın.</p>
            </div>
        </div>

        <div class="login-form-wrapper">
            <div class="login-box">
                <div class="logo-text"><i class="fa-solid fa-circle-notch text-primary me-2"></i> FibraBank</div>
                <h4 class="fw-bold mb-1 text-dark">Tekrar Hoşgeldiniz 👋</h4>
                <p class="text-muted mb-5 small">İnternet şubesine giriş yapın.</p>

                <form action="/Login/Index" method="post">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="emailInput" name="email" placeholder="name@example.com" required>
                        <label for="emailInput" class="text-muted">E-Posta Adresi</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="passwordInput" name="password" placeholder="Password" required>
                        <label for="passwordInput" class="text-muted">Şifre</label>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label small text-muted" for="rememberMe">Beni Hatırla</label>
                        </div>
                        <a href="/Login/ForgotPassword" class="small text-decoration-none fw-bold text-primary">Şifremi Unuttum</a>
                    </div>
                    <button type="submit" class="btn-login">Giriş Yap <i class="fa-solid fa-arrow-right ms-2"></i></button>

                    <div class="text-center mt-4">
                        <p class="text-muted small">Hesabınız yok mu? <br> Size en yakın <a href="#" class="text-primary fw-bold text-decoration-none">FibraBank Şubesi</a>'ne bekliyoruz.</p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (ViewBag.Error != null) 
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Hata',
                html: '@Html.Raw(ViewBag.Error)',
                confirmButtonColor: '#6366f1'
            });
        </script>
    }
</body>
</html>