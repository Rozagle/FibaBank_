@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Şifre Sıfırla</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: 'Poppins', sans-serif;
        }</style>
</head>
<body>
    <div class="card border-0 shadow-lg p-4" style="width: 400px; border-radius: 20px;">
        <div class="text-center mb-4">
            <h4 class="fw-bold">Yeni Şifre 🔑</h4>
            <p class="text-muted small">Lütfen yeni şifrenizi belirleyin.</p>
        </div>
        <form action="/Login/ResetPassword" method="post">
            <div class="mb-3">
                <label class="fw-bold small text-muted">YENİ ŞİFRE</label>
                <input type="password" name="newPassword" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="fw-bold small text-muted">ŞİFRE TEKRAR</label>
                <input type="password" name="confirmPassword" class="form-control" required>
            </div>
            <button class="btn btn-success w-100 py-2 fw-bold">Şifreyi Güncelle</button>
        </form>
    </div>
    @if (TempData["Error"] != null)
    {
        <script>Swal.fire('Hata', '@TempData["Error"]', 'error');</script>
    }
</body>
</html>