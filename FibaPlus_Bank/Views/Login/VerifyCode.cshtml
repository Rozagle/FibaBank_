@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Kodu Doğrula</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: 'Poppins', sans-serif;
        }</style>
</head>
<body>
    <div class="card border-0 shadow-lg p-4" style="width: 400px; border-radius: 20px;">
        <div class="text-center mb-4">
            <h4 class="fw-bold">Kodu Girin 📩</h4>
            <p class="text-muted small">E-postanıza gelen 6 haneli kodu giriniz.</p>
        </div>
        <form action="/Login/VerifyCode" method="post">
            <div class="mb-3">
                <input type="text" name="code" class="form-control text-center fs-3 fw-bold" maxlength="6" required placeholder="000000" style="letter-spacing: 5px;">
            </div>
            <button class="btn btn-primary w-100 py-2 fw-bold">Doğrula</button>
        </form>
    </div>
    @if (TempData["Info"] != null)
    {
        <script>Swal.fire('E-Posta Gönderildi', '@TempData["Info"]', 'info');</script>
    }
    @if (TempData["Error"] != null)
    {
        <script>Swal.fire('Hata', '@TempData["Error"]', 'error');</script>
    }
</body>
</html>