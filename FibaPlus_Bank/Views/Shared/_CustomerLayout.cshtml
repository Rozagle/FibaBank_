<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FibraBank</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href="~/css/customer.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

    <div class="sidebar">
        <div class="logo"><i class="fa-solid fa-circle-notch text-primary me-2"></i> FibraBank</div>

        <div class="nav-links">
            <a href="/Home/Index" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                <i class="fa-solid fa-grip-vertical"></i> Özet
            </a>
            <a href="/Accounts/Index" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Accounts" ? "active" : "")">
                <i class="fa-solid fa-wallet"></i> Hesaplarım
            </a>
            <a href="/Transfer/Index" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Transfer" ? "active" : "")">
                <i class="fa-solid fa-money-bill-transfer"></i> Para Transferi
            </a>
            <a href="/Investments/Index" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Investments" ? "active" : "")">
                <i class="fa-solid fa-chart-pie"></i> Yatırımlar
            </a>
            <a href="/Cards/Index" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cards" ? "active" : "")">
                <i class="fa-solid fa-credit-card"></i> Kartlarım
            </a>
        </div>

        <div class="sidebar-footer">
            <a href="/Login/Logout" class="logout-btn">
                <i class="fa-solid fa-arrow-right-from-bracket"></i> Çıkış Yap
            </a>
            <div class="user-profile">
                <div class="avatar">
                    @(Context.Session.GetString("UserName")?.Substring(0, 1).ToUpper() ?? "U")
                </div>
                <div>
                    <h6 class="m-0 fw-bold" style="font-size:14px;">@Context.Session.GetString("UserName")</h6>
                    <small class="text-muted" style="font-size:11px;">Müşteri Hesabı</small>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>